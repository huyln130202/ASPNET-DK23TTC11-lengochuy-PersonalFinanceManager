@model IEnumerable<PersonalFinanceManager.Models.Wallet>

@{
    ViewData["Title"] = "Wallets";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Wallets</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Wallet
        </a>
    </div>

    <div class="row">
        @foreach (var wallet in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@wallet.Name</h5>
                        <p class="card-text">
                            <strong>Type:</strong> @wallet.Type<br>
                            <strong>Balance:</strong> @wallet.Balance.ToString("C")<br>
                            @if (!string.IsNullOrEmpty(wallet.Description))
                            {
                                <strong>Description:</strong> @wallet.Description
                            }
                        </p>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@wallet.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@wallet.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger" 
                                        onclick="return confirm('Are you sure you want to delete this wallet?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 