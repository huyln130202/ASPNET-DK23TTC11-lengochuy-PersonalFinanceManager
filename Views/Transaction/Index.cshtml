@model IEnumerable<PersonalFinanceManager.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Transactions</h2>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Transaction
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Wallet</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Type</td>
                        <td>@item.Category</td>
                        <td class="@(item.Type == "Income" ? "text-success" : "text-danger")">
                            @(item.Type == "Income" ? "+" : "-")@item.Amount.ToString("C")
                        </td>
                        <td>@item.TransactionDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.Description</td>
                        <td>@item.Wallet.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this transaction?")) {
                window.location.href = `/Transaction/Delete/${id}`;
            }
        }
    </script>
} 