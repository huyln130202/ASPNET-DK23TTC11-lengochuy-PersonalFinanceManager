@model PersonalFinanceManager.Models.Wallet

@{
    ViewData["Title"] = "Tạo Ví";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Tạo Ví Mới</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Wallet" asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label">Tên Ví</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Type" class="control-label">Loại Ví</label>
                        <select asp-for="Type" class="form-control">
                            <option value="Cash">Tiền Mặt</option>
                            <option value="Bank">Tài Khoản Ngân Hàng</option>
                            <option value="E-wallet">Ví Điện Tử</option>
                            <option value="Credit Card">Thẻ Tín Dụng</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Balance" class="control-label">Số Dư</label>
                        <input asp-for="Balance" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Mô Tả</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Tạo</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 